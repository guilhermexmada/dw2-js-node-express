<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

    <img class="icon" src="/imgs/rank.png" alt="Ranked Elo">

    <h2 class="mt-5 ">Ranked</h2>
    <hr>
    <h3>Top Players Season 10</h3>
    <table class="table table-hover m-5">
        <thead class="  text-center">
            <tr>
                <th>#</th>
                <th>Nickname</th>
                <th>Rank</th>
                <th>Win</th>
                <th>Loss</th>
                <th>Draw</th>
                <th>Competitive hours</th>
            </tr>
        </thead>
        <tbody class="table-group-divider text-center">
            <!--FOREACH-->
            <% players.forEach( (player, i) => { %>
                <tr class="<%= player.rankcolor %>">
                    <td><%= i+1 %></td>
                    <td><%= player.nickname %></td>
                    <td><%= player.rank %></td> 
                    <td><%= player.win %></td> 
                    <td><%= player.loss %></td> 
                    <td><%= player.drawn %></td> 
                    <td><%= player.hours %></td> 
                </tr>
            <% }) %>
            
        </tbody>
    </table>


